<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>
<body>
  <header>
    <% include ../partials/header %>
  </header>
  <div class="posts">
    <% include partials/top %>
    <!-- main start -->

    <!-- views/posts/edit.ejs -->
    <div class="edit">
      <h3>Edit Post</h3>
      <form action="/posts/<%=data._id%>?_method=put" class="posts_form" method="post">
        <label for="">Title</label>
        <input type="text" name="post[title]" value="<%=data.title%>">
        <label for="">Body</label>
        <textarea name="post[body]" rows="8" cols="40"><%=data.body%></textarea>
        <button type="submit">Submit</button>
      </form>
      <a href="/posts/<%=data._id%>"><button type="button">Back</button></a>
    </div>

    <!-- main end -->
  </div>
  <!-- posts end -->
</body>
</html>
